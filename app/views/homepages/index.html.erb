<a  href="/"><h1>Sign Up</h1></a>
<div style="width:400px; height:400px; margin:0 auto;">
    <form id="form1" class="ui form" method="POST" action="/users">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="field">
            <label>User Name</label>
            <input name="username" required type="text" type="text">
        </div>
        <div class="field">
            <label>Email</label>
            <input name="email" required type="email" type="text">
        </div>
        <div class="field">
            <label>Password</label>
            <input name="password" required type="password" type="text">
        </div>
        <button class="ui button"  type="submit"> Sign Up </button>
    </form>
</div>